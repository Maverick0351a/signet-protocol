# Git LFS configuration for binary assets
# This ensures large binary files are stored efficiently

# Images
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.svg filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.webp filter=lfs diff=lfs merge=lfs -text

# Videos
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.webm filter=lfs diff=lfs merge=lfs -text

# Archives
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tgz filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text

# Documents
*.pdf filter=lfs diff=lfs merge=lfs -text

# Audio
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text

# Fonts
*.woff filter=lfs diff=lfs merge=lfs -text
*.woff2 filter=lfs diff=lfs merge=lfs -text
*.ttf filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text

# VS Code extension packages
*.vsix filter=lfs diff=lfs merge=lfs -text

# Line ending normalization
* text=auto

# Ensure shell scripts have LF line endings
*.sh text eol=lf
*.bash text eol=lf

# Ensure batch files have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# JSON, YAML, and config files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text

# Source code
*.py text
*.js text
*.ts text
*.jsx text
*.tsx text
*.rs text
*.go text
*.java text
*.c text
*.cpp text
*.h text
*.hpp text

# Documentation
*.md text
*.txt text
*.rst text

# Web files
*.html text
*.css text
*.scss text
*.sass text
*.less text

# Configuration files
Dockerfile text
.gitignore text
.gitattributes text
LICENSE text
README text
