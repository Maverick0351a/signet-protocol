# --- Signet Protocol configuration ---
# Backward-compatible aliases: SP_* preferred; AB_* accepted.
# Example API key mapping JSON:
# {
#   "my_dev_key": {
#     "tenant": "acme",
#     "free_quota": 5000,
#     "allowlist": ["postman-echo.com"],
#     "stripe_item_vex": "si_vex_123",
#     "stripe_item_fu": "si_fu_123",
#     "fallback_enabled": false
#   }
# }

SP_API_KEYS={"my_dev_key":{"tenant":"acme","free_quota":5000,"allowlist":["postman-echo.com"],"stripe_item_vex":"","stripe_item_fu":"","fallback_enabled":false}}
# Legacy alias
AB_API_KEYS=

# Global HEL allowlist (CSV)
SP_HEL_ALLOWLIST=api.openai.com,postman-echo.com
AB_HEL_ALLOWLIST=

# Database path (SQLite)
SP_DB_PATH=./data/signet.db
AB_DB_PATH=

# Optional: mirror receipts to JSONL for debugging
SP_RECEIPTS_JSONL=./data/receipts.jsonl
AB_RECEIPTS_JSONL=

# Ed25519 signing (32-byte seed in base64url) and key id
SP_PRIVATE_KEY_B64=
SP_KID=signet-key-1
AB_PRIVATE_KEY_B64=
AB_KID=

# Stripe (optional). If empty, billing buffer is disabled.
SP_STRIPE_API_KEY=
STRIPE_API_KEY=

# OpenAI (optional) for fallback
SP_OPENAI_API_KEY=
OPENAI_API_KEY=

# Server
PORT=8088
